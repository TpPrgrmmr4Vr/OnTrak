@model OnTrak.Models.ViewModels.BodyPartsViewModel
@using OnTrak.Models.ExtensionMethods
@{
    Layout = "_Layout";
}


<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Create</title>
</head>
<body>

    <h4>BodyPart</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Create" enctype="multipart/form-data" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    @Html.HiddenFor(Id => Model.BodyPartId);
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.BodyAreas, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.DropDownListFor(model => model.BodyAreaId,
                       Model.BodyAreas.ToSelectListItem(Model.BodyAreaId),
                       new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.BodyAreaId, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <label asp-for="NumberOfMuscles" class="control-label"></label>
                    <input asp-for="NumberOfMuscles" class="form-control" />
                    <span asp-validation-for="NumberOfMuscles" class="text-danger"></span>
                </div>
                <div class="form-group">
                    @Html.TextAreaFor(m => m.Description, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label asp-for="Image" class="control-label"></label>
                    <input type="file" accept="image/*" name="file" multiple />
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-default" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="Index">Back to List</a>
    </div>

</body>
</html>
